doctype html
head
    title TS Quiz
    meta(charset='UTF-8')
    style
        include main.css
.topnav
    a(href='./sign_out') Sign-out
    a#change_pass_button(href='./change_pass') Change Password
    a(href='./quizzes') Quizzes

