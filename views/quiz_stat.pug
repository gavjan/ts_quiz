doctype html
head
    title TS Quiz
    meta(charset='UTF-8')
    style
        include main.css

.topnav
    a(href='./quizzes') Â« Quizzes

div(style='text-align:center')
    h1(style='font-size: 80px') Results
    table
        tr
            th No.
            th Question
            th Correct Ans.
            th Your Ans.
            th Score
            th Avg.
        each stat in stats
            tr
                td= stat.num
                td= stat.question_str
                td= stat.ans
                td= stat.your_ans
                td= stat.score
                td= stat.avg_time
    h2="Overall Score: " + overall_score
    hr
    h1(style='font-size: 50px')="Top 3 Scores"
    table
        tr
            th Username
            th Score
        each score in top_scores
            tr
                td= score.username
                td= score.score

    script(src='assets/js/results.js')